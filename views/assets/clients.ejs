<%- layout('layouts/boilerplate') %>

<p class="fw-bold display-5"><%= title.customer %></p>

<% for(let asset of assets) { %>
<div class="card mb-2 w-75">
  <div class="card-header align-items-center lead justify-content-center justify-content-md-between d-flex">
    <span class="card-text fw-bold "><%= asset.ipAddress %></span>
    <span class="card-text d-none d-lg-block">
     <span class="fw-bold">Location: </span> 
      <%= asset.location %>
    </span>
    <span class="card-text d-none d-lg-block">
      <span class="fw-bold">Device Type: </span> 
      <%= asset.deviceType %>
    </span>
  </div>
    <div class="card-body d-flex justify-content-around">
      <a href="/assets/<%= asset.id %>" class="btn btn-primary col-sm-auto col-5 col-lg-2"
        >View</a
      >
      <a href="/assets/<%= asset.id %>/edit " class="btn btn-warning col-5 col-sm-auto col-lg-2">Edit</a>
    </div>
  </div>
</div>
<% } %>
