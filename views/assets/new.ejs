<%- layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">New Asset</h1>
  <div class="col-8 offset-2">
    <form action="/assets" method="POST">
      <section class="mb-3">
        <label class="form-label" for="ipAddress">IP Address</label>
        <input
          class="form-control"
          type="text"
          id="ipAddress"
          name="asset[ipAddress]"
          required
        />
      </section>
      <div class="row">
        <section class="mb-3 col-md-6">
          <label class="form-label" for="deviceType">Device Type</label>
          <input
            class="form-control"
            type="text"
            id="deviceType"
            name="asset[deviceType]"
            [deviceType]
          />
        </section>
        <section class="mb-3 col-md-6">
          <label class="form-label" for="model">Model</label>
          <input
            class="form-control"
            type="text"
            id="model"
            name="asset[model]"
          />
        </section>
      </div>
      <div class="row">
        <section class="mb-3 col-md-6">
          <label class="form-label" for="client">Client</label>
          <select class="form-select" name="asset[client]" id="asset" required>
            <option value="SBPHTD">SBPHTD</option>
            <option value="PPHTD">PPHTD</option>
            <option value="POSLA">POSLA</option>
          </select>
        </section>
        <section class="mb-3 col-md-6">
          <label class="form-label" for="location">Location</label>
          <input
            class="form-control"
            type="text"
            id="location"
            name="asset[location]"
          />
        </section>
      </div>
      <section class="mb-3">
        <label class="form-label" for="description">Description</label>
        <input
          class="form-control"
          type="text"
          id="description"
          name="asset[description]"
        />
      </section>
      <div class="row g-3">
        <section class="mb-3 col-md-6">
          <label class="form-label" for="attachedSwitch">Attached Switch</label>
          <input
            class="form-control"
            type="text"
            id="attachedSwitch"
            name="asset[attachedSwitch]"
          />
        </section>
        <section class="mb-3 col-md-6">
          <label class="form-label" for="portNumber">Port Number</label>
          <input
            class="form-control"
            type="number"
            id="portNumber"
            name="asset[portNumber]"
          />
        </section>
      </div>

      <section class="mb-3">
        <label class="form-label" for="macAddress">MAC Address</label>
        <input
          class="form-control"
          type="text"
          id="macAddress"
          name="asset[macAddress]"
        />
      </section>
      <section class="mb-3">
        <label class="form-label" for="serial">Serial Number</label>
        <input
          class="form-control"
          type="text"
          id="serial"
          name="asset[serial]"
        />
      </section>
      <section class="mb-3">
        <label class="form-label" for="notes">Notes</label>
        <textarea
          class="form-control"
          type="text"
          id="notes"
          name="campground[notes]"
        ></textarea>
      </section>
      <div class="mb-3">
        <button class="btn btn-success">Add Asset</button>
      </div>
    </form>
  </div>
</div>
